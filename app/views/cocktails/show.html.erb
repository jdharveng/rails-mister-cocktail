<h3><%= @cocktail.name %> Cocktail</h3>
<ul>
<% @cocktail.doses.each do |dose| %>
  <p><%= dose.description %> : <%= dose.ingredient.name %></p>
  <%= link_to dose_path(dose), method: :delete,
      data: { confirm: "Are you sure?" } do %>
      <i class="far fa-trash-alt"></i>
  <% end  %>
  <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
<% end %>
</ul>


<%= link_to 'Add a dose', new_cocktail_dose_path(@cocktail) %>

<hr />

<%= link_to cocktails_path do %>
  <i class="fas fa-arrow-left"></i> Go back
<% end %>
